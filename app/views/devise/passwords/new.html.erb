<section>
  <div class="container">
      <div class="row">
          <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h3>Forgot your password?</h3>
              <div class=" ">
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "" }) do |f| %>
                  <%= f.error_notification %>

                  <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" required autofocus>
                  </div>

                    <%= f.button :submit, "Send me reset password instructions",  input_html: { class: 'form-control' } %>
                 
                <% end %>
              </div>
              <div class="panel-footer">
                <%= render "devise/shared/links" %>
              </div>
          </div>
      </div>
  </div>
</section>