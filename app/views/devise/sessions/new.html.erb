<section>
  <div class="container">
      <div class="row account-wall">
        
          <div class="col-sm-12">
              <div class="col-sm-6 social-account-wall">
                <a href="/users/auth/facebook"><%= image_tag "fb.jpg" %></a>
                <br>
                <a href="/users/auth/twitter"><%= image_tag "twitter.jpg" %></a>
                <br>
                <a href="/users/auth/google_oauth2"><%= image_tag "google.jpg" %></a>
                <br>
              </div>
 
              <div class="col-sm-6">
                  <%= form_for(resource, :as => resource_name, html: { class: "form-signin"}, :url => session_path(resource_name)) do |f| %>
                       <% if notice %>
                    	  <p class="alert alert-success"><%= notice %></p>
                    	<% end %>
                    	<% if alert %>
                    	  <p class="alert alert-danger"><%= alert %></p>
                    	<% end %>
                      <div class="form-group">
                        <input type="email" name="user[email]" class="form-control" placeholder="Email" required autofocus>
                      </div>
                      <div class="form-group">
                        <input type="password" name="user[password]" class="form-control" placeholder="Password" required>
                      </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

                  <label class="checkbox pull-left">
                      <input type="checkbox" value="remember-me">
                      Remember me
                  </label>
                  <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                 <% end %>
              </div>
          </div>
           <div class="col-sm-12 panel-footer">
                <a href="/users/sign_up">Sign up</a>
                <br>
                <a href="/users/password/new">Forgot your password?</a>
                <br>
              </div>
      </div>
  </div>
</section>
