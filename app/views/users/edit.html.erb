<section>
    <div class="container">
        <div class="row account-wall">
        
            <div class="col-sm-12">

                <h2>Edit User</h2>
                
                <%= simple_form_for(@user, html: { method: :post, class: "form-signin" }) do |f| %>
                  <%= f.error_notification %>
                
                  <div class="form-group">
                    <%= f.input :email, required: true, autofocus: true %>
                </div>
                <div class="form-group">
                    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
                 </div>
                  <div class="form-group">
                    <%= f.input :password_confirmation, required: false %>
                 </div>
                 <div class="form-group">
                    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
                  </div>
                
                  <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
                  </div>
                <% end %>
                
                <h3>Cancel my account</h3>
                
                <p>Unhappy? <%= link_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></p>
                
                 

                
                <%= link_to 'Show', @user %>
                
                <!--https://www.youtube.com/watch?v=s09NJvm6VCM-->
            </div>
        </div>
    </div>
</section>